datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator db {
  provider = "go run github.com/steebchen/prisma-client-go"
}

model User {
  id          String   @id @default(uuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  firstName   String
  lastName    String
  phoneNumber String
  email       String   @unique
  password    String

  animals     Animal[]
  appointment Appointment[]
}

model ServiceProvider {
  id          String   @id @default(uuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  firstName   String
  lastName    String
  phoneNumber String
  career      String
  email       String
  passaword   String

  service     Service[]
  appointment Appointment[]
}

model Animal {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String
  species   String?
  age       String?

  user    User   @relation(fields: [ownerID], references: [id])
  ownerID String
}

model Service {
  id          String   @id @default(uuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  serviceName String
  serviceDesc String?
  price       String

  serviceProvider   ServiceProvider @relation(fields: [serviceProviderId], references: [id])
  serviceProviderId String
}

model Appointment {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user              User            @relation(fields: [userId], references: [id])
  userId            String
  serviceProvider   ServiceProvider @relation(fields: [serviceProviderId], references: [id])
  serviceProviderId String
}
